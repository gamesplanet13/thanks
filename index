  let o = document.getElementById("output").textContent;
  let name = o.match(/Name: ([^\n]+)/)?.[1] || "Customer";
  let orderId = o.match(/Order ID: ([^\n]+)/)?.[1] || "Not found";
  let product = o.match(/Product: ([^\n]+)/)?.[1].trim() || "";
  let pincode = o.match(/Pincode: ([^\n]+)/)?.[1] || "";
  let distance = o.match(/Distance: ([^\n]+)/)?.[1] || "";
  let eta = o.match(/Estimated Delivery: ([^\n]+)/)?.[1] || "few days";

  let msg = encodeURIComponent(
`ğŸŒŸ GamesPlanet
ğŸ™ Hello ${name} ji, thank you for your order ${orderId}.
ğŸ“¦ Product: ${product}
ğŸ“ Pincode: ${pincode} | ğŸ“ Distance: ${distance} km
â³ Estimated Delivery: ${eta}
ğŸšš Your order will be shipped soon between 8PMâ€“10PM.
ğŸ”— Tracking will update on our website after dispatch.
ğŸ’š Team GamesPlanet`);

  let mobile = document.getElementById("input").value.match(/\+91[-\s]?[0-9]{10}/)?.[0].replace(/\s|-/g,"") || "";
  if(mobile) window.open(`https://wa.me/${mobile}?text=${msg}`, "_blank"); else alert("Customer mobile number not found in input.");
}

function sendAbandonedCart() {
  let o = document.getElementById("output").textContent;
  let name = o.match(/Name: ([^\n]+)/)?.[1] || "Customer";
  let orderId = o.match(/Order ID: ([^\n]+)/)?.[1] || "Not found";
  let product = o.match(/Product: ([^\n]+)/)?.[1].trim() || "";
  let basePrice = parseInt(o.match(/Base Price: â‚¹([\d,]+)/)?.[1].replace(/,/g, '') || "0");
  let discount = parseInt(o.match(/Discount Applied: â‚¹([\d,]+)/)?.[1].replace(/,/g, '') || "0");
  let prepaidAmount = basePrice - discount;
  let codAdvance = Math.max(500, Math.round(basePrice * 0.10));
  let codRemaining = basePrice - codAdvance;

  let eta = o.match(/Estimated Delivery: ([^\n]+)/)?.[1] || "few days";
  let codEta = eta.includes('day') ? eta.replace(/\d+/g, d => parseInt(d)+2) : eta;

  let msg = encodeURIComponent(
`ğŸŒŸ GamesPlanet

ğŸ™ Hello ${name} ji,

ğŸ“ incomplete Order Details:
â€“ Order ID: ${orderId}
â€“ Product: ${product}
â€“ Base Price: â‚¹${basePrice}

ğŸ’° Prepaid Offer: â‚¹${basePrice} â€“ â‚¹${discount} discount = â‚¹${prepaidAmount}
ğŸšš Estimated Delivery:
â€“ Prepaid: ${eta}

ğŸ’µ COD: â‚¹${basePrice} (no discount)
â¡ COD Advance: â‚¹${codAdvance}
â¡ Remaining on Delivery: â‚¹${codRemaining}
ğŸšš Estimated Delivery:
â€“ COD: ${codEta}

ğŸ‘‰ Complete payment soon to confirm your order.
ğŸ’š Team GamesPlanet`);

  let mobile = document.getElementById("input").value.match(/\+91[-\s]?[0-9]{10}/)?.[0].replace(/\s|-/g,"") || "";
  if(mobile) window.open(`https://wa.me/${mobile}?text=${msg}`, "_blank"); else alert("Customer mobile number not found in input.");
}

// NEW: WhatsApp Thanks Converter
function convertThanks() {
  let input = document.getElementById("thanksInput").value;

  let orderId = input.match(/Order ID[:#]*\s*([^\n*]+)/i)?.[1].trim() || "Not found";
  if(!orderId.startsWith("#") && orderId !== "Not found") orderId = "#" + orderId;

  let name = input.match(/Name[:]*\s*([^\n*]+)/i)?.[1].trim() || "Customer";
  let product = input.match(/Product[:]*\s*([^\n*]+)/i)?.[1].trim() || "your ordered product";
  let pincode = input.match(/Pincode[:]*\s*([^\n*]+)/i)?.[1].trim() || "";
  let distance = input.match(/Distance[:]*\s*([^\n*]+)/i)?.[1].trim() || "";
  let eta = input.match(/Estimated Delivery[:]*\s*([^\n*]+)/i)?.[1].trim() || "few days";

  if(distance && !distance.includes("km")) distance += " km";

  let thanksMsg = 
`ğŸŒŸ GamesPlanet
ğŸ™ Hello ${name} ji, thank you for your order ${orderId}.
ğŸ“¦ Product: ${product}
ğŸ“ Pincode: ${pincode}${distance ? " | ğŸ“ Distance: " + distance : ""}
â³ Estimated Delivery: ${eta}
ğŸšš Your order will be shipped soon between 8PMâ€“10PM.
ğŸ”— Tracking will update on our website after dispatch.
ğŸ’š Team GamesPlanet`;

  document.getElementById("thanksOutput").textContent = thanksMsg;
}

function sendWhatsAppThanks() {
  let msg = encodeURIComponent(document.getElementById("thanksOutput").textContent);
  let input = document.getElementById("thanksInput").value;
  let mobile = input.match(/Mobile[:]*\s*([^\n*]+)/i)?.[1].trim().replace(/\D/g,'') || "";
  if(mobile.length === 10) mobile = "91" + mobile;
  if(mobile) window.open(`https://wa.me/${mobile}?text=${msg}`, "_blank");
  else alert("Customer mobile number not found in input.");
}
